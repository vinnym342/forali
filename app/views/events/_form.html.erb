<%= form_with(model: event, local: true,url: url) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :event_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :event_description %>
  </div>

  <div class="field">
    <%= form.label :time %>
    <%= form.datetime_select :time, id: :event_time %>
  </div>

  <div class="field">
    <%= form.label :max_participants %>
    <%= form.number_field :max_participants, id: :event_max_participants %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
