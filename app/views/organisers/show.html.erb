<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @organiser.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @organiser.description %>
</p>
<br>
<% if OrganiserFollow.find_by(user: current_user, organiser: @organiser).present? %>
<%= link_to "Unfollow",new_organiser_follow_path(@organiser.id), search: @search_params %>
<% else %>
<%= link_to "Follow",new_organiser_follow_path(@organiser.id), search: @search_params %>
<% end %>
<br>
<% if @organiser.owner_id == current_user.id %>
	<%= link_to "Edit Page",edit_organiser_path(@organiser) %>
	<%= link_to "Create Event", new_organiser_event_path(@organiser)%>
<% end %>
<%= link_to 'Edit', edit_organiser_path(@organiser) %> |
<%= link_to 'Back', organisers_path %>
<% @organiser_events.each do |event| %>
		<div class="event">
		        <h2><%= event.name %></h2>
		        <p><%= event.description %></p>
		        <p><%= event.time.strftime("%H:%M %m/%d") %></p>
		        <p>Max People:<%= event.max_participants %></p>
<%= link_to 'View', event_path(event) %> 
		</div>
<% end %>
